{
    "manifest_version": 3,
    "name": "SCREEN SHOTTER",
    "description": "Take screenshot of webpage",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "/images/icon-128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon-16x16.png",
            "32": "/images/icon-32x32.png",
            "128": "/images/icon-128x128.png"
        }
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "desktopCapture"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "version": "1.0.0"
}